html do
  head do
    title "#{controller.controller_name.singularize.titleize} #{action_name.titleize} on Freehub"
    stylesheet_link_tag 'scaffold'
  end
  body do
    h1 do
      link_to @organization.name, organization_path(:id => @organization)
      text " on Freehub"
    end if @organization
    hr
    p flash[:notice], :style => "color: green"
    self << content_for_layout
  end
end

