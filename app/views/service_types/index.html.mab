h1 "Listing service_types"

table do
  tr do
    th { 'Name' }
    th { 'Description' }
  end

  for service_type in @service_types
    tr do
      td { service_type.name }
      td { service_type.description }
      td { link_to 'Show', service_type }
      td { link_to 'Edit', edit_service_type_path(service_type) }
      td { link_to 'Destroy', service_type, :confirm => 'Are you sure?', :method => :delete }
    end
  end
end

br

link_to 'New service_type', new_service_type_path
