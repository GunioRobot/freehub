h1 'Editing report'

error_messages_for :report

form_for @report, :url => report_path(:id => @report) do |f|
  labeled_input'Target', :for => :target do
    f.text_field :target
  end
  labeled_input'Date from', :for => :date_from do
    f.date_select :date_from
  end
  labeled_input'Date to', :for => :date_to do
    f.date_select :date_to
  end
  p { f.submit "Update"  }
end

link_to 'Show', report_path(:id => @report)
text ' | '
link_to 'Back', reports_path
